{
  "name": "excelstarter-ultra",
  "version": "1.0.0",
  "description": "Beginner-friendly Excel training platform",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node app.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "build": "npm run build:client && npm run build:electron",
    "build:client": "cd client && npm run build",
    "build:electron": "electron-builder",
    "build:win": "npm run build:client && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win && npm run clean:build",
    "build:win:clean": "npm run clean:dist && npm run build:client && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win && npm run clean:build",
    "clean:dist": "node scripts/clean-dist.js",
    "clean:build": "node scripts/clean-build.js",
    "build:mac": "npm run build:client && electron-builder --mac",
    "build:linux": "npm run build:client && electron-builder --linux"
  },
  "keywords": [
    "excel",
    "training",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "sharp": "^0.33.5",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "com.excelstarter.ultra",
    "productName": "ExcelStarter Ultra",
    "directories": {
      "output": "dist",
      "buildResources": "electron/assets"
    },
    "files": [
      "electron/**/*",
      "electron/assets/icon.ico",
      "server/**/*",
      "server/node_modules/**/*",
      "client/build/**/*",
      "package.json",
      "server/package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/assets/icon.ico",
      "sign": null,
      "signingHashAlgorithms": null,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/assets/icon.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
